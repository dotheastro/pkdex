<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/ActionBar.Solid.Pokedex</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="ActionBar.Solid.Pokedex" parent="@android:style/Widget.Holo.ActionBar">
    <!--TODO add top & bottom padding of 4dp each -->
    <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    <!-- Robolectric does not handle icon that is set to android:color/transparent -->
    <item name="android:icon">@drawable/transparent</item>
    <item name="android:background">@color/dark_blue</item>
    <item name="android:titleTextStyle">@style/ActionBar.Title.Text.Pokedex</item>
  </style>

  <style name="ActionBar.Title.Text.Pokedex"
      parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="pokemon_type">
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:shadowColor">@color/shadow_gray</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">2</item>
    <item name="android:shadowRadius">4</item>
    <item name="android:background">@color/accent_blue</item>
    <item name="android:padding">4dp</item>
    <item name="android:layout_marginRight">8dp</item>
  </style>

  <style name="basic_padding">
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingLeft">16dp</item>
  </style>

</resources>
