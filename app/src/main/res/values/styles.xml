<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColor">@color/default_gray</item>
    <item name="android:textColorPrimary">@android:color/white</item>
  </style>

  <style name="ActionBar.Solid.Pokedex" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    <item name="android:icon">@drawable/transparent</item>
    <item name="android:background">@color/dark_blue</item>
    <item name="android:textColorPrimary">@android:color/white</item>
    <item name="actionMenuTextColor">@android:color/white</item>
  </style>

  <style name="pokemon_type">
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:shadowColor">@color/shadow_gray</item>
    <item name="android:shadowDx">0</item>
    <item name="android:shadowDy">2</item>
    <item name="android:shadowRadius">4</item>
    <item name="android:padding">4dp</item>
    <item name="android:layout_marginRight">4dp</item>
    <item name="android:layout_marginBottom">4dp</item>
  </style>

  <style name="basic_padding">
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingLeft">16dp</item>
  </style>

</resources>
